<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail"><%= image_tag @listing.image.url %></div>
  </div>
  <div class="col-md-6">
      <h3><%= @listing.name %><br></h3>
      <p><%= number_to_currency(@listing.price) %></p><br>
      <p><%= @listing.description %></p><br>   
      <p><%= "Sold by #{@listing.user.name}" %></p>
  </div>
</div>
<% if user_signed_in? && @listing.user == current_user %>
    <%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>